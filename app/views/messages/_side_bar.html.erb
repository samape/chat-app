<div class="side-bar-top">
  <div class="user">
    <%= link_to current_user.name, edit_user_path(current_user) %>
  </div>
  <div class="make-btn">
    <%= link_to "チャットを作成する", new_room_path %>
  </div>
</div>

<div class="side-bar-bottom">
  <% current_user.rooms.each do |room| %>
    <div class="rooms">
      <div class="room-name">
        <a href="#"><%= room.name %></a>
      </div>
    </div>
  <% end %>
</div>
